{% extends 'frontend/toroide/base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block container %}
    <div class="container">
        <div class="row">
            {% block content %}
                <div class="col-md-8 spiralcms-blogentries-content">

                    <!-- Posts -->
                    {% for post in posts %}
                        {{ include('frontend/toroide/partials/post-list-card.html.twig') }}
                    {% endfor %}

                    <!-- Pagination -->
                    <ul class="pagination justify-content-center mb-4">
                        <li class="page-item">
                            <a class="page-link" href="#">← Older</a>
                        </li>
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Newer →</a>
                        </li>
                    </ul>
                </div>
            {% endblock %}
            {% block right_sidebar %}
                {{ parent() }}
            {% endblock %}
        </div>
    </div>
{% endblock %}

