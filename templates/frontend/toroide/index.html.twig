{% block container %}
    <div class="container">
        <div class="row">
            {% block content %}
                <div class="col-md-8 toroide-content">

                    {% for post in posts %}
                        {{ include('frontend/toroide/partials/_post-list-card.html.twig') }}
                    {% endfor %}

                    <ul class="pagination justify-content-center mb-4">
                        {{ knp_pagination_render(posts) }}
                    </ul>
                </div>
            {% endblock %}
            {% block right_sidebar %}
                {{ parent() }}
            {% endblock %}
        </div>
    </div>
{% endblock %}