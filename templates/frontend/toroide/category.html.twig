{% extends 'frontend/toroide/base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block container %}
    <div class="container">
        <div class="row">

            {% block jumbotron %}{% endblock %}
            {% block featured_posts %}{% endblock %}

            {% block content %}
                <div class="col-md-8 spiralcms-blogentries-content">
                    <div class="card mb-4 spiral-card">
                        <div class="card-body">
                            <h2 class="card-title">{{ category.title }}</h2>
                        </div>
                    </div>

                    {% for post in posts %}
                        {{ include('frontend/toroide/partials/post-list-card.html.twig') }}
                    {% endfor %}

                </div>
            {% endblock %}

            {% block right_sidebar %}
                {{ parent() }}
            {% endblock %}

        </div>
    </div>
{% endblock %}

